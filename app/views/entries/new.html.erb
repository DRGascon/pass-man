<%= form_with scope: :entry, url: entries_path, local: true do |form| %>
    <% if @entry.errors.any? %>
        <div id ="error_explanation">
            <h2>
                <%= pluralize(@entry.errors.count, "error") %>
                    prohibited this entry from being saved:
            </h2>
            <ul>
                <% @entry.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <p>
        <%= form.label :site_name %><br>
        <%= form.text_field :site_name %>
    </p>
    <p>
        <%= form.label :user_name %><br>
        <%= form.text_field :user_name %><br>
    </p>
    <p>
        <%= form.label :password %><br>
        <%= form.text_field :password %><br>
    </p>

    <p>
        <%= form.submit %>
    </p>
<% end %>

<%= link_to 'Back', entries_path %>
