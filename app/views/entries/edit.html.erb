<h1>Edit Password Entry </h1>

<%= form_with(model: @entry, local: true) do |form| %>

    <% if @entry.errors.any? %>
        <div id="error_explanation">
            <h2>
                <%= pluralize(@entry.errors.count, "error") %> prohibited
                this entry from being saved:
            </h2>
            <ul>
                <% @entry.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <p>
        <strong>Website:</strong>
        <%= @entry.site_name %>
    </p>
    <p>
        <strong>User name:</strong>
        <%= @entry.user_name %>
    </p>
    <p>
        <strong>Current Password:</strong>
        <%= form.text_field :encrypted_password %><br>
    </p>
    <p>
        <%= form.submit %>
    </p>
<% end %>

